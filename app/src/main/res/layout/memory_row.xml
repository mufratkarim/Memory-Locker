<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="12dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@color/purple_200"
        android:alpha="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recycler_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="10dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/recycler_shareButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_share" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recycler_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_img" />

        <TextView
            android:id="@+id/recycler_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/purple_500"
            android:text="@string/prompt_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recycler_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:textColor="@color/purple_700"
            android:paddingTop="15dp"
            android:text="@string/prompt_description"
            android:textSize="16sp"
            android:textStyle="normal"

            />

        <TextView
            android:id="@+id/recycler_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Date Created"
            android:textSize="16sp"
            android:textStyle="italic" />


    </LinearLayout>

</androidx.cardview.widget.CardView>